<configuration>
  <appSettings>
    <add key="HttpApi-ErrorResponse" value="DataResult"/>   <!-- HttpApi错误时返回的对象： HttpError 或 DataResult -->
    <add key="HttpApi-JsonWrapper" value="None"/>     <!-- HttpApi返回json对象时是否需要封装：None 或 DataResult -->
  </appSettings>
  <!--
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <httpHandlers>
      <add verb="*" path="HttpApi*.axd" type="App.HttpApi.HttpApiHandler, App.HttpApi"/>
    </httpHandlers>
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID" />
  </system.web>
  -->
  <system.webServer>
    <handlers>
      <add name="HttpApi" verb="*" path="HttpApi*.axd" type="App.HttpApi.HttpApiHandler, App.HttpApi"/>
      <add name="WebApi" verb="*" path="WebApi*.axd" type="App.HttpApi.HttpApiHandler, App.HttpApi"/>
    </handlers>
  </system.webServer>
  <system.web>
    <compilation debug="true"/>
  </system.web>
</configuration>